{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "WebWorker"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,

		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test-web", "src/**/*.test.ts"],
}
